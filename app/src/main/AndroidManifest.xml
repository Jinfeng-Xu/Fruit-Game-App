<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fruitgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="FruitGame"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FruitGame">
        <activity android:name=".OrangeActivity"
            android:label="Orange"></activity>
        <activity android:name=".AppleActivity"
            android:label="Apple"></activity>
        <activity android:name=".StrawberryActivity"
            android:label="Strawberry"></activity>
        <activity android:name=".PearActivity"
            android:label="Pear"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>